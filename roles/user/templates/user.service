[Unit]
Description = User Service
[Service]
User=roboshop
Environment={{ lookup('aws_ssm', 'dev.user.mongo', region='us-east-1' ) }}
Environment={{ lookup('aws_ssm', 'dev.user.redis_host', region='us-east-1' ) }}
Environment={{ lookup('aws_ssm', 'dev.user.mongo_url', region='us-east-1' ) }}
ExecStart=/bin/node /app/server.js
SyslogIdentifier=user

[Install]
WantedBy=multi-user.target